<Include xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <!-- Visual C++ 2015 x86 -->
    <Property Id="HASVCPP2015">
        <RegistrySearch Id="HasVCPP2015Search" Root="HKLM" Key="SOFTWARE\Microsoft\VisualStudio\14.0\VC\VCRedist\x86" Name="Installed" Type="raw" />
    </Property>   
    <Condition Message="This application requires Microsoft Visual C++ 2015 Redistributable Package (x86). This may be downloaded from http://www.microsoft.com/download/en/details.aspx?id=5555">Installed OR (HASVCPP2015)</Condition>
</Include>
