<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
		<!-- Test environment variables to determine which build type we want
			 i.e. with VS2015 DLLs, Merge Modules or a simple warning
			-->
		<?if $(env.KRITA_VC2015_DISTRIBUTE) = DLL ?>
			 <?warning Distributing VC2015 DLLs?>
			<?include VC2015DLLs.wxi ?>
		<?elseif $(env.KRITA_VC2015_DISTRIBUTE) = MSM ?>
			<?warning Distributing VC2015 Merge Module?>
			<?include MergeModules_x64.wxi ?>
		<?else ?>
			<!-- User does not have rights to distribute, test for presence and display error -->
			<?warning Using VC2015 Runtime Test and Warning only?>
			<?include FindVC2015x64.wxi ?>
		<?endif ?>
		<ComponentGroup Id="CG.VC2015_Support" />
	</Fragment>
</Wix>
